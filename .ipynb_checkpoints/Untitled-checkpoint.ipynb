   "source": [
    "import solara\n",
    "\n",
    "clicks = solara.reactive(0)\n",
    "\n",
    "\n",
    "@solara.component\n",
    "def Page():\n",
    "    def increase_clicks():\n",
    "        clicks.value += 1\n",
    "\n",
    "    solara.Button(label=f\"Clicked {clicks} times\", on_click=increase_clicks)\n",
    "\n",
    "# in the Jupyter notebook, uncomment the next line:\n",
    "display(Page())"
   ]
